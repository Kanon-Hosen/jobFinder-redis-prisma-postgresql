generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  password     String
  role         Role           @default(SEEKER)
  companyName  String?        // only required for EMPLOYER
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  jobPost     Jobs[]          // for EMPLOYER
  applies Applications[]  // for SEEKER
}
enum Role {
  SEEKER
  EMPLOYER
}
model Jobs {
  id           String         @id @default(cuid())
  title        String
  description  String
  type         String
  company      String
  requirements String
  salary       String
  benefits     String[]
  location     String
  userId       String
  user         User           @relation(fields: [userId], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  applies      Applications[]
}

model Applications {
  id             String   @id @default(cuid())
  fullName       String
  phone          String
  location       String
  resume         String
  coverLetter    String
  experience     String
  skills         String
  portfolio      String
  linkedIn       String
  expectedSalary String
  available      String
  user           User     @relation(fields: [userId], references: [id])
  userId         String
  job            Jobs     @relation(fields: [jobId], references: [id])
  jobId          String
  applyDate      DateTime @default(now())
  status         String   @default("Pending") //Accepted, Rejected
}
